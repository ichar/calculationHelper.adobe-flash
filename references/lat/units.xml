<!-- Список используемых единиц измерения ISO-31-x, ОКЕИ-Общероссийский классификатор единиц измерения	-->

<!DOCTYPE document
	[
		<!ELEMENT document (system, task, description, lanquage, unit+)>
			<!ATTLIST	document
						id		ID		#REQUIRED
						type	NMTOKEN	#REQUIRED
			>
				<!ELEMENT system EMPTY>
					<!ATTLIST	system
								id		ID		#REQUIRED
								version	NMTOKEN	#REQUIRED
					>
				<!ELEMENT task EMPTY>
					<!ATTLIST	task
								id		ID		#REQUIRED
								version	NMTOKEN	#REQUIRED
					>
				<!ELEMENT description EMPTY>
					<!ATTLIST	description
								id		ID		#REQUIRED
								version	NMTOKEN	#REQUIRED
					>
				<!ELEMENT lanquage EMPTY>
					<!ATTLIST	lanquage
									id	ID		#REQUIRED
					>
				<!ELEMENT unit ANY>
						<!ATTLIST	unit
									numCode		NMTOKEN		#REQUIRED
									alphaCode	NMTOKEN		#REQUIRED
									localCode	NMTOKENS	#IMPLIED
						>
	]
>

